<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginPage"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="LoginPage.MessageBox1"
        mc:Ignorable="d"
        Title="MessageBox1" Height="200" Width="400" WindowStyle="None" Background="Gray" WindowStartupLocation="CenterScreen">

    <Grid>

        <TextBlock x:Name="textBlock_Message" HorizontalAlignment="Left" Margin="20,51,0,0" TextWrapping="Wrap" Text="Message" VerticalAlignment="Top" Width="245" Height="29" Foreground="White"/>
        <Button Content="Yes" HorizontalAlignment="Left" Margin="181,138,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="No" HorizontalAlignment="Left" Margin="293,138,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="title" HorizontalAlignment="Left" Height="24" Margin="1,0,0,0" TextWrapping="Wrap" Text="Message" VerticalAlignment="Top" Width="399" Background="Black" Foreground="White" TextChanged="title_TextChanged"/>

        <materialDesign:DialogHost Content="DialogHost" HorizontalAlignment="Left" Margin="75,80,0,0" VerticalAlignment="Top" Width="270" Height="58"/>

    </Grid>
</Window>
